<odoo>
<record id="view_appointment_tree" model="ir.ui.view">
    <field name="name">appointment.tree</field>
    <field name="model">appointment</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="squad_name"/>
            <field name="begin_date"/>
            <field name="end_date"/>
        </tree>
    </field>
</record>

<record id="view_appointment_kanban" model="ir.ui.view">
    <field name="name">appointment.kanban</field>
    <field name="model">appointment</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="name"/>
            <field name="squad_name"/>
            <field name="begin_date"/>
            <field name="end_date"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_details">
                        <strong><t t-esc="record.name.value"/></strong>
                        <p><t t-esc="record.squad_name.value"/></p>
                        <p><t t-esc="record.begin_date.value"/></p>
                        <p><t t-esc="record.end_date.value"/></p>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

<record id="action_appointment" model="ir.actions.act_window">
    <field name="name">Appointments</field>
    <field name="res_model">appointment</field>
    <field name="view_mode">tree,kanban</field>
</record>

<menuitem id="menu_appointment_root" name="Appointments" sequence="10"/>
<menuitem id="menu_appointment" parent="menu_appointment_root" action="action_appointment" name="Liste des RDV"/>
</odoo>